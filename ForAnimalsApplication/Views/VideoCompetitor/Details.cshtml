@model ForAnimalsApplication.Models.VideoCompetitor
@{
    ViewBag.Title = "Details VideoCompetitor";
    var emptySummaryMsgVar = "This animal has no details";
}

<h2>@Model.Name</h2>
<div class="col-sm-4 col-md-4 col-xs-12">
    <div class="title">@Model.Vname</div>
    <div class="video-frame">
        <video style="width:100%; height:auto;" controls>
            <source src="@Url.Content(@Model.Vpath)" type="video/mp4" />
        </video>
    </div>
</div>
<br />

@Html.Label("Descrition", "Description: ")
<br />
<div class="panel-body">
    @if (Model.Description.IsEmpty())
    {
        <p>@emptySummaryMsgVar</p>

    }
    else
    {
        @Html.DisplayFor(b => b.Description)
    }
</div>
<div>
    <p>@Model.MicrochipNumber</p>
</div>
<br />
@if (ViewBag.NewReview)
{
    using (Html.BeginForm(actionName: "New", controllerName: "VideoReview", method: FormMethod.Get, routeValues: new { id = Model.VideoCompetitorId }))
    {
        <button style="margin-right:5px" class="btn btn-primary col-lg-1" type="submit">New Review</button>
    }
}
@using (Html.BeginForm(actionName: "AboutCompetitor", controllerName: "Statistics", method: FormMethod.Get, routeValues: new { id = Model.MicrochipNumber }))
{
    <button style="margin-right:5px" class="btn btn-primary col-lg-1" type="submit">Statistici</button>
}
@using (Html.BeginForm(actionName: "Index", controllerName: "VideoCompetitor", method: FormMethod.Get))
{
    <button style="margin-right:5px" class="btn btn-primary col-lg-1" type="submit">Back</button>
}

@if (ViewBag.VideoReviews != null)
{
    foreach (var review in ViewBag.VideoReviews)
    {
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.Label("ReviewDate", "Review Date: ")
                <br />
                <p>@review.ReviewDate</p>
                <br />
                <p>Username: @review.ApplicationUser.UserName</p>
                <br />
                <div class="col-md-2">
                    @{
                        switch (review.Note)
                        {
                            case 0:
                                <text>
                                    <h5 style="margin: 20px;">☆☆☆☆☆ (@review.Note)</h5>
                                </text>
                                break;
                            case 1:
                                <text>
                                    <h5 style="margin: 20px;">⭐☆☆☆☆ (@review.Note)</h5>
                                </text>
                                break;
                            case 2:
                                <text>
                                    <h5 style="margin: 20px;">⭐⭐☆☆☆ (@review.Note)</h5>
                                </text>
                                break;
                            case 3:
                                <text>
                                    <h5 style="margin: 20px;">⭐⭐⭐☆☆ (@review.Note)</h5>
                                </text>
                                break;
                            case 4:
                                <text>
                                    <h5 style="margin: 20px;">⭐⭐⭐⭐☆ (@review.Note)</h5>
                                </text>
                                break;
                            case 5:
                                <text>
                                    <h5 style="margin: 20px;">⭐⭐⭐⭐⭐ (@review.Note)</h5>
                                </text>
                                break;
                        }
                    }
                </div>


                @Html.Label("Text", "Text: ")
                <br />
                <p>@review.Text</p>
                @using (Html.BeginForm(actionName: "Details", controllerName: "VideoReview", method: FormMethod.Get, routeValues: new { id = review.VideoReviewId }))
                {
                    <button style="margin-right:5px" class="btn btn-primary col-lg-1" type="submit">Details</button>
                }
                @using (Html.BeginForm(actionName: "Edit", controllerName: "VideoReview", method: FormMethod.Get, routeValues: new { id = review.VideoReviewId }))
                {
                    <button style="margin-right:5px" class="btn btn-primary col-lg-1" type="submit">Edit</button>
                }
                @using (Html.BeginForm(actionName: "Delete", controllerName: "VideoReview", method: FormMethod.Post, routeValues: new { id = review.VideoReviewId }))
                {
                    @Html.HttpMethodOverride(HttpVerbs.Delete)
                    <button style="margin-right:5px" class="btn btn-primary col-lg-1" type="submit">Delete</button>
                }

            </div>
        </div>
    }
}