
@{
    ViewBag.Title = "Index";
}

<div class="container">
    @using (Html.BeginForm(actionName: "Index", controllerName: "Home", method: FormMethod.Get))
    {
        <button style="margin-right:5px" class="buttonBack" type="submit"><img style="width:20px; height:20px;" src="~/Content/Image/544-5440422_back-arrow-icon-transparent-png-clipart-free-download.png" />Inapoi</button>
    }
</div>

<h3 class="text-center"style="font-size: 35px; font-weight: bold; margin-top:7%;">Evaluare competitii</h3>
<div class="container" style="margin-top:4%">
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead class="p-3 mb-2 bg-info text-white">
                    <tr>
                        <th>Nume competitie</th>
                        <th>Actiuni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var competition in ViewBag.Competitions)
                    {
                        <tr>
                            <td>@competition.CompetitionName</td>
                            <td>
                                <div class="row">
                                    <div class="col-md-6">
                                        @using (Html.BeginForm(actionName: "Details", controllerName: "Competition", method: FormMethod.Get, routeValues: new { id = competition.CompetitionId }))
                                        {
                                            <button style="margin-right: 5px" class="btn btn-primary " type="submit">Evalueaza</button>
                                        }
                                    </div>
                                    <div class="col-md-6">
                                        @using (Html.BeginForm(actionName: "Evaluates", controllerName: "Evaluation", method: FormMethod.Get, routeValues: new { id = competition.CompetitionId }))
                                        {
                                            <button style="margin-right: 5px" class="btn btn-danger " type="submit">Evaluat</button>
                                        }
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
