@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Adauga Rol";
}
<h1 class="text-center" style="font-weight: bold;">@ViewBag.Title</h1>
@Html.Partial("_TopMenuPartial")

<div style=" margin-top:7%;" align="center">
@using (Html.BeginForm(actionName: "AddRole", controllerName: "Users", method: FormMethod.Post))
{
    @Html.LabelFor(r => r.Name, "Nume rol: ")
    <br />
    @Html.TextBoxFor(r => r.Name, null, new { placeholder = "Introduceti numele rolului", @class = "form-control", required = "required", })
    @Html.ValidationMessageFor(r => r.Name, "", new { @class = "text-danger" })
    <br />
    <br />
    <button class="btn btn-primary" type="submit" align="center">Adauga rol</button>
}
</div>

