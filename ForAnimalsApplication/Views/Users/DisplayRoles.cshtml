@model List<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "DisplayRoles";
}
@Html.Partial("_TopMenuPartial")
<h2>Role Mangement</h2>

<div class="row">
    <div class="col-6" style="border-left:1px solid black;">
        <h3 class="text-center">All Roles</h3>
        @if (Model.Count == 0)
        {
            <p>No roles found!</p>
        }
        else
        {
            <table class="table">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>Role Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model)
                    {
                        <tr>
                            <td>@r.Name</td>
                            <td>
                                Remove Role
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

</div>