@model List<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "DisplayRoles";
}
<h1 class="text-center" style="font-weight:bold;">Toate rolurile</h1>

@Html.Partial("_TopMenuPartial")

<div class="row" style="margin-top: 30px;">
    <div class="col-6" style="border-left:1px solid black;">
       
        @if (Model.Count == 0)
        {
            <p>No roles found!</p>
        }
        else
        {
            <table class="table">
                <thead class="bg-dark text-white">
                    <tr>
                        <th style="font-size:20px;">Nume rol</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model)
                    {
                        <tr>
                            <td>@r.Name</td>

                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

</div>